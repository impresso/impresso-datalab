---
import { getEntry } from "astro:content";
import App from "../components/App.astro";
import TermsOfUseModal from "../components/TermsOfUseModal";
import Layout from "../layouts/Layout.astro";
import { CanonicalUrl } from "../constants";
import { AstroSeo } from "@astrolib/seo";

const pageContent = await getEntry("pagesContents", "terms-of-use") as any;

---

<Layout title={pageContent.data.title}>
  <AstroSeo
    canonical={CanonicalUrl}
    title={pageContent.data.title}
    description={pageContent.data.excerpt}
  />
  <App transition:persist/>
  <TermsOfUseModal client:only="react" content={pageContent.body}/>
</Layout>